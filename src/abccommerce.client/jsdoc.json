{
    "source": {
        "include": ["src"],
        "includePattern": ".(js|jsx)$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown",
                "node_modules/docdash-extended/categories"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/",
        "template": "node_modules/docdash-extended"
    }, 
    "categoriesFile": "./categories.json",
    "docdash": {
        "search": true
    }
}